# Base Infrastructure Configuration
# Copy this file to .env and customize for your server

# Base Domain (for admin interfaces)
BASE_DOMAIN=yourdomain.com

# Database Configuration (shared across clients)
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_wordpress_password_here

# Email Configuration (for Let's Encrypt)
EMAIL=your-email@example.com

# Server Configuration
SERVER_IP=your_server_ip_here

# Optional: Slack notifications for Watchtower
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Traffic Management
ENABLE_LOAD_BALANCING=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Platform
PLATFORM=linux/arm64